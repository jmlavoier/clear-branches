{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": "off",
    "max-len": ["error", { "code": 80 }]
  },
  "ignorePatterns": ["*.js"]

}
